@model WebSite.EndPoint.Models.ViewModels.User.VerifyPhoneNumberDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>VerifyPhoneNumberDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifyPhoneNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input  asp-for="PhoneNumber" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Code" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="تایید" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به لیست</a>
</div>

